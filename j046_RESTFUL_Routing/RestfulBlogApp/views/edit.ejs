<!-- We copied over everything from new.ejs and wil now modify -->
<!-- We now want title to match blog title and content to be filled -->
<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <!-- Since we are editing and updating we need change POST -> PUT -->
    <!-- And we are targeting specific blog id so in action we add that -->
    <form class="ui form" action="/blogs/<%= blog._id %>" method="PUT"> 
        <div class="field">
            <label>Title</label>
            <!-- So instead of placeholder we replace with value -->
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <!-- Here we don't need value and just directly put blog.body -->
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <!-- These colors can be found at: semantic-ui.com/elements/buttons.html -->
        <input type="submit" name="" class="ui violet big basic button">

    </form>
</div>

<% include ./partials/footer %>