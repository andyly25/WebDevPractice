<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <!-- this is taken from semantic-ui.com/views/item.html -->
        <div class="item">
            <!-- here we give a nice semantic ui image -->
            <img class="ui centered rounded image" src="<%= blog.image %>">
            <div class="content">
                <!-- moment.js handles dates better -->
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <!-- instead of < % = if we use - it runs as code instead of string -->
                <p><%- blog.body %></p>
            </div>
            <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit">Edit </a>
            <!-- for delete button we have to make a form for it 
                it will also use the method override for DELETE
            -->
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST"> 
                <button class="ui red basic button">DELETE</button>
            </form>
        </div>
    </div>

</div>


<% include ./partials/footer %>

